FROM mcr.microsoft.com/dotnet/sdk:6.0 AS base

FROM base AS build
WORKDIR /app
COPY ./src/Runner .
RUN dotnet publish -c Release -o out

FROM base AS cache
WORKDIR /app
RUN dotnet new --install AElf.ContractTemplates 
RUN dotnet new aelf -n HelloWorld
RUN dotnet restore src
RUN dotnet restore test

FROM base AS final
COPY --from=mcr.microsoft.com/dotnet/sdk:8.0 /usr/share/dotnet /usr/share/dotnet
COPY --from=cache ~/.nuget/packages ~/.nuget/packages
WORKDIR /app
COPY --from=build /app/out .
ENTRYPOINT ["dotnet", "Runner.dll"]